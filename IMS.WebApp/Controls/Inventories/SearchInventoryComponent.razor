<form @onsubmit="OnSearch">
<div class="input-group">
    <input @bind-value="inventoryNameToSearch"
           type="text"
           class="form-control"
           placeholder="Type inventory name here to search" />

    <button 
            type="submit"
            class="btn btn-success input-group-text">
        Search
    </button>

</div>
</form>
<!--One way data-binding-->
@*@inventoryNameToSearch*@

@code {
    private string inventoryNameToSearch = string.Empty;

    //delegate
    [Parameter]
    public EventCallback<string> OnSearchInventory { get; set; }

    private void OnSearch()
    {
        OnSearchInventory.InvokeAsync(inventoryNameToSearch);
    }



}
